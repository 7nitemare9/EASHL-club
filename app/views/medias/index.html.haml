- @medias.each do |media|
  .box
    .content
      %p
        %img{ :src => "/assets/blank.jpg", :width => "100%" }
        %p2 #{ media.title.upcase }
      p3 #{ raw media.text }

      %p
        = link_to 'Edit', edit_media_path(media)
        = link_to 'Delete', media, confirm: 'Are you sure?', 'data-method' => :delete
