:css
  b {
    color: #aaa;
  }
  .tray {
    background: rgba(50,50,50,0.9);
    float: left;
    position: absolute;
    width: 100%;
    height: 100px;
    border-top: 1px solid #777;
    bottom: 0;
    padding: 5px;
  }
  .tray a:link {
    text-decoration: none;
    font-size: x-small;
  }
  .title a:link {
    font-size: x-large !important;
    font-family: Myriad;
    font-weight: bold;
  }
  .top_news {
    float: left;
    height:100px;
    overflow: hidden;
    width: 60%;
    border-right: 1px solid #777;
  }
  .other_news {
    font-size: x-small;
    float: left;
    height: 90px;
    width: 40%;
    padding: 5px;
    color: #fff;
  }
  .post_image {
    height: 400px;
    overflow: hidden;
    position: relative;
  }
- post = @posts.first
.news
  .box
    .post_image
      - post[:image][0] ||= "assets/blank.jpg"
      %img{ :src => post[:image][0], :width => "650"}
        .tray
          .top_news
            .title
              %p2
                = link_to(post[:title].upcase, post_path(post[:id]))
            %p3= raw post[:text]
          .other_news
            - @posts.each.with_index do |post, i|
              - unless i == 0
                %div{class: i.to_s}
                  >
                  = link_to post[:title], post_path(post[:id])
    - if @current_user.user_name == "admin"
      %p
        = link_to 'Edit', edit_post_path(post[:id])
        = link_to 'Delete', post, confirm: 'Are you sure?', 'data-method' => :delete
