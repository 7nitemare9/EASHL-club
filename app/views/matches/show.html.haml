%p
.scorebox
  %div{:style => "font:Arial; font-size:18px; color:white; position:absolute; margin-left:30px; margin-top:12px;"} #{@match.game_teams[0].name} 
  %div{:style => "font:Arial; font-size:12px; color:white; position:absolute; margin-left:297px; margin-top:16px;"} #{@match.game_teams[0].goals}
  %div{:style => "font:Arial; font-size:12px; color:white; position:absolute; margin-left:389px; margin-top:16px;"} #{@match.game_teams[0].goalsAgainst}
  %div{:style => "font:Arial; font-size:18px; color:white; position:absolute; margin-right: -30px; margin-left:435px; margin-top:12px;"} #{@match.game_teams[1].name}

- two_d = false

.box{:id => "rink"}
  - @match.game_players.each do |player|
    - if player[:position] == "1" && two_d == true
      - player[:position] = "2" 
      - two_d = false
    - else
      - if player[:position] == "1"
        - two_d = true
    = render :partial => 'player_image', :locals => { :player => player, :pos => player[:position], 
                                                      :is_away => player.team == @match.game_teams[0].clubId }
%p
  %div{:align => "center"}
    %p
      %img{:src => "/assets/boxscore/Scorecard.jpg",  :align => "absmiddle"}
    .tcenter    
      = render :partial => 'player_table', :locals => { :match => @match }
      

= link_to 'Edit', edit_match_path(@match)
= link_to 'Back', matches_path
