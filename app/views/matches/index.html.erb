<h1>Listing matches</h1>

<table>
  <tr>
    <th>Opponent</th>
    <th>Scored</th>
    <th>Let in</th>
    <th>Center</th>    
    <th>Rw</th>    
    <th>Lw</th>    
    <th>Def1</th>    
    <th>Def2</th>    
    <th>Goalie</th>
    <th></th>
    <th></th>
    <th></th>    
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.opponent %></td>
    <td><%= match.gScored %></td>
    <td><%= match.gLetIn %></td>
    <td><%= match.Center %></td>
    <td><%= match.RW %></td>    
    <td><%= match.LW %></td>
    <td><%= match.Def1 %></td>
    <td><%= match.Def2 %></td>
    <td><%= match.Goalie %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

