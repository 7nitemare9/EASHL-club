<h1>Listing matches</h1>

<table>
  <tr>
    <th>Opponent</th>
    <th>Gscored</th>
    <th>Gletin</th>
    <th>Center</th>
    <th>Pcenter</th>
    <th>Hcenter</th>
    <th>Rw</th>
    <th>Prw</th>
    <th>Hrw</th>
    <th>Lw</th>
    <th>Plw</th>
    <th>Hlw</th>
    <th>Def1</th>
    <th>Pdef1</th>
    <th>Hdef1</th>
    <th>Def2</th>
    <th>Pdef</th>
    <th>Hdef</th>
    <th>Goalie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.opponent %></td>
    <td><%= match.gScored %></td>
    <td><%= match.gLetIn %></td>
    <td><%= match.Center %></td>
    <td><%= match.pCenter %></td>
    <td><%= match.hCenter %></td>
    <td><%= match.RW %></td>
    <td><%= match.pRW %></td>
    <td><%= match.hRW %></td>
    <td><%= match.LW %></td>
    <td><%= match.pLW %></td>
    <td><%= match.hLW %></td>
    <td><%= match.Def1 %></td>
    <td><%= match.pDef1 %></td>
    <td><%= match.hDef1 %></td>
    <td><%= match.Def2 %></td>
    <td><%= match.pDef %></td>
    <td><%= match.hDef %></td>
    <td><%= match.Goalie %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

